<form class="text-bg" action='/' id='contact_me' name='contact_me' method='post' novalidate='novalidate' >
  <div class='form-group'>
    <label for='name'>Name</label>    
    <input type="text" class='form-control' name='name' id='name' placeholder='NAME'>
  </div>
  <div class="form-group">
    <label for='mail'>Email</label>     
    <input type="email" class='form-control' name='mail' id='mail' placeholder='EMAIL'>
  </div>
  <div class="form-group">
    <label for='subject'>Subject</label>   
    <input type="text" class='form-control' name='subject' id='subject' placeholder='SUBJECT'>
  </div>
  <div class="form-group">
    <label for='body'>Message</label>   
    <textarea placeholder='MESSAGE' class='form-control' name="body" id="body" cols="30" row"10"></textarea>
  </div>
  <input id="submit" type="submit" class="btn btn-lg btn-default">
</form>